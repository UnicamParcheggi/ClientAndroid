<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo"
    tools:context="com.example.stach.app_test.Cambia_credenziali">

    <!--Only for padding-->
    <!-- linear for mail icon and mail text-->
    <!--Only for padding-->

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="2dp">

            <EditText
                android:id="@+id/nuova_Data_Nascita"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci la nuova data di nascita"
                android:inputType="date"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_Cognome" />

            <EditText
                android:id="@+id/nuova_Telefono"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci il nuovo telefono"
                android:inputType="phone"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_password" />

            <EditText
                android:id="@+id/nuova_Username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci il nuovo username"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitolo" />

            <EditText
                android:id="@+id/nuova_Email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/blue_trasparente"
                android:hint="Inserisci la nuova email"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Username" />

            <EditText
                android:id="@+id/nuova_Nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci il nuovo nome"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_Username" />

            <EditText
                android:id="@+id/nuova_Cognome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci il nuovo cognome"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_Nome" />

            <EditText
                android:id="@+id/vecchia_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:hint="Inserisci la password corrente"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_Data_Nascita" />

            <Button
                android:id="@+id/nuova_buttonCommit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="76dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/roundedbutton"
                android:paddingBottom="15dp"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                android:paddingTop="15dp"
                android:text="AGGIORNA LE CREDENZIALI"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nuova_Telefono" />

            <TextView
                android:id="@+id/textViewTitolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:singleLine="true"
                android:text="Aggiorna le tue credenziali"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/nuova_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:ems="10"
                android:hint="Inserisci la nuova password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:scrollbars="none|horizontal"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="#1D1C1D"
                android:textIsSelectable="false"
                android:textSize="17sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vecchia_password" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>